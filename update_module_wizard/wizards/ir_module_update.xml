<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ir_module_update_view_form" model="ir.ui.view">
        <field name="name">ir.module.update.view.form</field>
        <field name="model">ir.module.update</field>
        <field name="arch" type="xml">
            <form>
                <group name="base">
                    <group>
                        <field name="module_id" />
                        <field name="latest_version" />
                    </group>
                </group>
                <footer>
                    <button type="object" name="run" string="Run" class="btn-primary" data-hotkey="r" />
                    <button special="cancel" string="Cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="ir_module_update_action" model="ir.actions.act_window">
        <field name="name">Update Module</field>
        <field name="res_model">ir.module.update</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ir_module_update_view_form" />
        <field name="target">new</field>
    </record>

    <menuitem
        name="Update Module"
        id="ir_module_update_menu"
        action="ir_module_update_action"
        groups="base.group_system"
        parent="base.menu_management"
    />

</odoo>
